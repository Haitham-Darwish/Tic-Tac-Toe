<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/xologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/xologo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlayerVsComp"
            android:label="@string/PlayerVsComp"/>

        <activity android:name=".PlayerVsPlayer"
            android:label="@string/PlayerVsPlayer"/>

        <activity android:name=".MainActivity">

        </activity>
    </application>

</manifest>